# cd
alias ..='cd ..'

# ls
alias ls="ls -G" # for mac
# alias ls="ls --color=auto" # for linux
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# commands starting with % for pasting from web
alias %=' '
alias phantomjs='~/Applications/./phantomjs'
alias ctags='/usr/local/bin/ctags'
alias git='hub'
alias tmux="TERM=screen-256color-bce tmux"

# Warp into a directory
# then create a sessions in tmux
wdt() { wd "$*"; mux start "$*" }
wdx() { wd "$*"; tmux new -s "$*" }

alias be="time bundle exec"
alias bev="time USE_VCR=true bundle exec"
alias ber="time bundle exec rescue"
alias berv="time USE_VCR=true bundle exec rescue"
alias deploy="heroku deploy --app rema-mine-ansatte-staging"
alias deploy-prod="heroku deploy --app rema-mine-ansatte"
